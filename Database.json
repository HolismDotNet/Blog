{
    "name": "Blog",
    "tables": [
        {
            "name": "Posts",
            "hasGuid": true,
            "hasSlug": true,
            "columns": [
                {
                    "name": "Title"
                },
                {
                    "name": "Summary",
                    "isNullable": true
                },
                {
                    "name": "TimeToRead",
                    "type": "int",
                    "isNullable": true
                },
                {
                    "name": "ImageGuid",
                    "isNullable": true
                },
                {
                    "name": "AcceptsComment",
                    "type": "boolean",
                    "isNullable": true,
                    "hasDefault": true,
                    "defaultSqlText": "1"
                },
                {
                    "name": "Date"
                },
                {
                    "name": "LastUpdateDate",
                    "isNullable": true
                },
                {
                    "name": "StateId"
                }
            ]
        },
        {
            "name": "PostContents",
            "oneToOneWith": "Posts",
            "columns": [
                {
                    "name": "Content"
                }
            ]
        },
        {
            "name": "States",
            "isEnum": true,
            "enumItems": [
                {
                    "key": "Draft",
                    "value": 1
                },
                {
                    "key": "Published",
                    "value": 2
                }
            ]
        }
    ],
    "views": [
        {
            "name": "PostViews",
            "query": [
                "select",
                "  p.*,",
                "  (",
                "    select group_concat(TagName)",
                "    from Taxonomy.TagItemViews tiv",
                "    where tiv.EntityGuid = p.Guid",
                "  ) as TagsCsv",
                "from Posts p"
            ]
        }
    ]
}